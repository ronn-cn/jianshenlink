/**index.wxss**/

.page-bg{
  background-image: linear-gradient(-45deg,#ffffff 50%, #d7f9fa, #dcebfd);
}

.page-show{
  height: 600px;
  background-color: chocolate;
}

.view-show{
  display: block;
}

.view-hide{
  display: none;
}

.bar-blue{
  color: #4d8af9 ;
}

.bar-gray{
  color: #515151;
}

.bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    padding: 0 20rpx;
  }
  
  .btn-group {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    font-weight: bold;
    padding: 20rpx 0;
  }
  
  .weui-input {
    background-color: #f1f1f1;
    border-radius: 10rpx;
    width: 400rpx;
    padding: 16rpx 16rpx;
  }
  
  .cover {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 99999;
  }

  .mask{
    background-color: #333333;
    opacity: 0.5;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }
  
  .cover_child {
    width: 550rpx;
    height: 300rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 5;
  }
  
  .child-title {
    white-space: nowrap;
    margin-top: 60rpx;
    height: 32rpx;
    font-size: 34rpx;
    font-weight: bold;
    color: #333333;
    line-height: 36rpx;
    margin-bottom: 31rpx;
  }
  
  .cross {
    margin-bottom: 110rpx;
    bottom: 0rpx;
    position: fixed;
    width: 60rpx;
    height: 60rpx;
    z-index: 5;
  }

  .btn-pn::after{
    content: none;
    border: none;
    width: auto;
    height: auto;
  }
  
  .btn-pn:not{
    margin: 0;
    padding: 0;
    width: auto;
    height: auto;
  }
  
  .btn-pn {
    display: block;
    margin: 0 !important;
    padding: 0 !important;
    width: auto !important;
    height: auto;
    background-color: inherit;
    position: static;
    font-size: 1em;
  }
  
/* pages/login/index.wxss */

.page-bg{
    background-image: linear-gradient(-45deg,#ffffff 50%, #d7f9fa, #dcebfd);
}

.header{
    display: block;
    width: 100%;
    text-align: center;
}

.header .title{
    font-size: 40rpx;
    font-weight: 600;
    margin-top: 150rpx;
}

.header .desc{
    color: #7b7e7e;
    font-size: 30rpx;
    margin-top: 50rpx;
}

.middle{
    margin-top: 50rpx;
    width: 100%;
    text-align: center;
}

.footer{
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
}

.footer-btn{
    height: 10vh;
    display: flex;
    align-items: center;
}

.footer .btn{
    width: 95%;
    height: 100rpx;
    line-height: 100rpx;
    padding:0;
    color: white;
    font-weight: 200;
    margin: 0 auto;
    background: rgb(48,114,255);
    background: linear-gradient(0deg, rgba(48,114,255,1) 35%, rgba(103,155,255,1) 100%);
    border-radius: 50rpx;
}